{
  "extends": [
    "standard",
    "standard-react",
    "prettier",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "react/prop-types": ["none"]
  },
  "globals": {
    "__DEV__": false
  }
}
